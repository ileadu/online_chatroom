doctype html
html(lang="en")
    head
        title= RethinkDB && express
        script(src="js/socket.io-1.3.6.js")
        script(src="js/jquery-2.1.4.min.js")
        script(src="js/bootstrap.min.js")
        link(rel="stylesheet", type="text/css", href="css/bootstrap.min.css")

    body
        .container-fluid
            .row
                .col-xs-12
                    .col-xs-2
                    .col-xs-8
                        h3 請輸入資料
                        hr
                        form(action='/', method='POST')
                            .form-group
                                label 姓名
                                input.form-control.name(name='name')
                            .form-group
                                label 年齡
                                input.form-control.age(name='age')
                            button.btn.btn-primary.btn-lg.btn-block(type='submit') 送出
                    .col-xs-2
                .col-xs-12
                    .col-xs-2
                    .col-xs-8
                        h3 顯示資料
                        hr
                        table.table.table-striped
                            thead
                                tr
                                    th 姓名
                                    th 年齡
                            tbody.messages
                                each item in people
                                    tr      
                                        td #{item.name}
                                        td #{item.age}
                    .col-xs-2

        script(type='text/javascript').
            var socket = io('http://#{ip}:9291/');
            socket.on('newData', function (data) {
                console.log(data);
                $('.messages').prepend('<tr><td>' + data.name + '</td><td>' + data.age + '</td></tr>');
            });

